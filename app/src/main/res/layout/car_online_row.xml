<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/myThemeLighterBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/car_no_status_64"
            android:layout_margin="8dp"
            android:id="@+id/statusImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CT 19 TBI"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/statusImage"
            android:layout_marginTop="12dp"
            android:id="@+id/licencePlateTag"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/licencePlateTag"
            android:text="  -  "
            android:textStyle="italic"
            android:layout_marginTop="12dp"
            android:id="@+id/separatorLicenceDriver"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/separatorLicenceDriver"
            android:text="Driver Name"
            android:textStyle="italic"
            android:layout_marginTop="12dp"
            android:id="@+id/driverNameTag"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Near   "
            android:layout_below="@+id/licencePlateTag"
            android:layout_alignLeft="@id/licencePlateTag"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="6dp"
            android:id="@+id/staticNear"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Constanta, Romania"
            android:layout_below="@+id/licencePlateTag"
            android:layout_toEndOf="@id/staticNear"
            android:id="@+id/nearTag"
            android:layout_marginTop="6dp"
            android:textStyle="italic"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow_next"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:background="@color/myThemeLighterBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="~90 km/h~"
            android:id="@+id/speedTag"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Going to  "
            android:layout_toEndOf="@id/speedTag"
            android:id="@+id/staticGoingTo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/staticGoingTo"
            android:text="Bucharest,Bucharest"
            android:textStyle="italic"
            android:id="@+id/goingToTag"/>

    </RelativeLayout>




</LinearLayout>